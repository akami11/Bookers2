<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/new" %>
      <%= render "books/new", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
        <h1>Users</h1>
        <table class="table">
          <thead>
            <tr>
              <td>image</td>
              <td>name</td>
              <td colspan"1"></td>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id)%></td>

            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>