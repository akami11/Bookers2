<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>User info</h2>
  <%= render 'layouts/error_messages', model: @user %>
  <%= form_with model:@user, local: true do |f| %>

    <h5>Name</h5>
    <div class="field m-1">
      <%= f.text_field :name, class: "w-100" %>
    </div>
    <h5>Image</h5>
      <%= f.attachment_field :profile_image %>

    <h5>introduction</h5>
    <div class="field m-1">
      <%= f.text_area :introduction, class: "w-100" %>
    </div>

    <div class="actions mt-1">
    <%= f.submit 'Update User', class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
