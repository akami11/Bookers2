<%= render 'layouts/error_messages', model: @book %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/new" %>
      <%= render "books/new", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <td colspan"1"></td>
            <td>Title</td>
            <td>Opinion</td>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr id="book_<%= book.id %>" class="favorite-btn">
          <%= render "favorites/favorite-btn", book: book %>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>